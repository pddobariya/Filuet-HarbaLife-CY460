@model int
@if (Model > 0)
{
    <script src="~/lib/popper.js/umd/popper.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <link type="text/css" href="~/lib/twitter-bootstrap/css/bootstrap-bundle.min.css" />

    <div class="form-group">
        <div class="col-md-3">
            <label>@T("ISDK.Filuet.OnlineOrdering.CorePlugin.InputInn")</label>
        </div>
        <div class="col-md-9">
            <input class="text-box single-line" data-val="true" required data-val-required="The Length field is required." id="inn" name="inn" type="text" data-val-regex-pattern="^\d{5,8}$">
            <span class="field-validation-valid" data-valmsg-for="inn" data-valmsg-replace="true"></span>

        </div>
    </div>
    <script>
        $($("#inn")[0].form).validate({
            //errorPlacement: function (error, element) {
            //    var lastError = $(element).data('lastError'),
            //        newError = $(error).text();
            //    $(element).data('lastError', newError);
            //    if (newError !== '') {
            //        $(element).tooltip({
            //            placement: "bottom",
            //            trigger: "manual",
            //            title: newError
            //        }).tooltip('show');
            //    }
            //},
            //success: function (label, element) {
            //    $(element).tooltip('hide');
            //}

        });
        $.validator.addMethod(
            "regex",
            function(value, element, regexp) {
                var re = new RegExp(regexp);
                return this.optional(element) || re.test(value);
            },
            "Please check your input."
        );
        $("#inn").rules("add", { regex: "^\\d{@Model}$" });
    </script>
}