@using Nop.Core
@using System.Globalization;
@using System.Text.Encodings.Web
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.Extensions.Primitives
@using static Nop.Services.Common.NopLinksDefaults
