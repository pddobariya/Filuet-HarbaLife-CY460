@model HBL.Uzbek.Onlineordering.Catalogue.PriceFilter.Models.PriceFilterModel

@{
    Layout = "_ColumnsTwo";

    //title
    NopHtml.AddTitleParts(Model.Name);
    //page class
    NopHtml.AppendPageCssClassParts("html-manufacturer-page");
}
<div class="page manufacturer-page">
    <div class="page-title">
        <h1>@Model.Name</h1>
    </div>
    <div class="page-body">
        @if (Model.Products.Count > 0)
        {
            @await Html.PartialAsync("~/Views/Catalog/_CatalogSelectors.cshtml", Model.CatalogProductsModel)
        }

        @if (Model.Products.Count > 0)
        {
            <div class="@(Model.CatalogProductsModel.ViewMode == "list" ? "product-list" : "product-grid")">
                <div class="item-grid">
                    @foreach (var product in Model.Products)
                    {
                        <div class="item-box">
                            @await Html.PartialAsync("_ProductBox", product)
                        </div>
                    }
                </div>
            </div>
        }
        @{
            var pager = Html.Pager(Model.CatalogProductsModel).QueryParam("pagenumber");
        }
        @if (!await pager.IsEmpty())
        {
            <div class="pager">
                @pager
            </div>
        }
    </div>
</div>

                        