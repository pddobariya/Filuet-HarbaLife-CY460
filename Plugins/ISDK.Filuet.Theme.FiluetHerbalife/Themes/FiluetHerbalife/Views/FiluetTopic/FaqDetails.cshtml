@model ISDK.Filuet.Theme.FiluetHerbalife.Models.FaqListModel
@{
    Layout = "_ColumnsOne";
}

<section class="content_flex block">
    <div class="cont row">

        @await Html.PartialAsync("_FaqMenu", Model)

        <section class="content">
        @foreach (var topic in Model.FaqModels)
        {
            if (topic.IsActive)
            {
                <section class="page_head">
                    <h1 class="page_title">@topic.Faq.Title</h1>
                </section>

                <section class="faq accordion">
                    @Html.Raw(topic.Faq.Body)

                    <div class="add_question_btn">
                        <div>@T("ISDK.Filuet.Theme.FiluetHerbalife.IfYouHaveAny")<br>@T("ISDK.Filuet.Theme.FiluetHerbalife.QuestionsAskUs")</div>
                        
                        <script data-b24-form="click/10/nizw6c" data-skip-moving="true">
                            (function(w,d,u){
                                var s=d.createElement('script');s.async=true;s.src=u+'?'+(Date.now()/180000|0);
                                var h=d.getElementsByTagName('script')[0];h.parentNode.insertBefore(s,h);
                            })(window,document,'https://portal.filuet.ru/upload/crm/form/loader_10_nizw6c.js');
                        </script>

                        <button class="btn">@T("ISDK.Filuet.Theme.FiluetHerbalife.AskQuestion")</button>
                    </div>
                </section>
            }
        }
        </section>
    </div>
</section>