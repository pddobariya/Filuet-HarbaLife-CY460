@model ConfigurationModel


<div class="cards-group">
    <div class="card card-default">
        <div class="card-body">


            @await Html.PartialAsync("Table", new DataTablesModel
            {
            Name = "sales-center-grid" + Model.SalesCenterSearchModel.LanguageId,
            UrlRead = new DataUrl("SalesCentersList", "DeliveryAdmin", new RouteValueDictionary{[nameof(Model.SalesCenterSearchModel.LanguageId)]=  Model.SalesCenterSearchModel.LanguageId}),
            UrlUpdate = new DataUrl("SalesCenterUpdate", "DeliveryAdmin", new RouteValueDictionary{[nameof(Model.SalesCenterSearchModel.LanguageId)]=  Model.SalesCenterSearchModel.LanguageId}),
            UrlDelete = new DataUrl("SalesCenterDelete", "DeliveryAdmin", new RouteValueDictionary{[nameof(Model.SalesCenterSearchModel.LanguageId)]=  Model.SalesCenterSearchModel.LanguageId}),
            Length = Model.SalesCenterSearchModel.PageSize,
            LengthMenu = Model.SalesCenterSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
            {
            new ColumnProperty(nameof(SalesCenterDtoModel.Name))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.Name").Text,
            Editable = true,
            EditType = EditType.String
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.Address))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.Address").Text,
            Width = "200",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.CenterAll,
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.City))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.City").Text,
            Width = "150",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.CenterAll,
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.Price))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.Price").Text,
            Width = "150",
            Editable = true,
            EditType = EditType.Number,
            ClassName =  NopColumnClassDefaults.CenterAll,
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.WarehouseCode))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.WarehouseCode").Text,
            Width = "150",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.CenterAll,
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.FreightCode))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.FreightCode").Text,
            Width = "150",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.CenterAll,
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.VolumePoints))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.VolumePoints").Text,
            Width = "150",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.CenterAll,
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.WorkTime))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.WorkTime").Text,
            Width = "150",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.CenterAll
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.Id))
            {
            Title = T("Admin.Common.Edit").Text,
            Width = "100",
            ClassName =  NopColumnClassDefaults.Button,
            Render = new RenderButtonsInlineEdit()
            },
            new ColumnProperty(nameof(SalesCenterDtoModel.Id))
            {
            Title = T("Admin.Common.Delete").Text,
            Width = "100",
            ClassName =  NopColumnClassDefaults.Button,
            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
            }
            }
            })
        </div>
    </div>
</div>
<div class="float-left">
    <a href="@Url.Action("SalesCenterCreate", "DeliveryAdmin", new { languageId = Model.SalesCenterSearchModel.LanguageId })" class="btn btn-primary">
        <i class="fas fa-plus-square"></i>
        @T("Admin.Common.AddNew")
    </a>
</div>



