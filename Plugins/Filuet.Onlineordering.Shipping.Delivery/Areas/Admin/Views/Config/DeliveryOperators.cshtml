@model ConfigurationModel


<div class="cards-group">
    <div class="card card-default">
        <div class="card-body">
         
            @await Html.PartialAsync("Table", new DataTablesModel
            {
            Name = "delivery-operators-grid" + Model.DeliveryOperatorDtoSearchModel.LanguageId,
            UrlRead = new DataUrl("GetDeliveryOperators", "DeliveryAdmin", new RouteValueDictionary{[nameof(Model.DeliveryOperatorDtoSearchModel.LanguageId)]=  Model.DeliveryOperatorDtoSearchModel.LanguageId}),
            UrlUpdate = new DataUrl("DeliveryOperatorUpdate", "DeliveryAdmin", new RouteValueDictionary{[nameof(Model.DeliveryOperatorDtoSearchModel.LanguageId)]=  Model.DeliveryOperatorDtoSearchModel.LanguageId}),
            UrlDelete = new DataUrl("DeliveryOperatorDelete", "DeliveryAdmin", new RouteValueDictionary{[nameof(Model.DeliveryOperatorDtoSearchModel.LanguageId)]=  Model.DeliveryOperatorDtoSearchModel.LanguageId}),
            Length = Model.DeliveryOperatorDtoSearchModel.PageSize,
            LengthMenu = Model.DeliveryOperatorDtoSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
            {
            new ColumnProperty(nameof(DeliveryOperatorDtoModel.OperatorName))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.Name").Text,
            Encode = false,
            Editable = true,
            EditType = EditType.String,
            },
            new ColumnProperty(nameof(DeliveryOperatorDtoModel.FreightCode))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.FreightCode").Text,
            Width = "200",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.Button,
            }, 
            new ColumnProperty(nameof(DeliveryOperatorDtoModel.WarehouseCode))
            {
            Title = T("Plugins.ShippingMethods.Delivery.Fields.WarehouseCode").Text,
            Width = "200",
            Editable = true,
            EditType = EditType.String,
            ClassName =  NopColumnClassDefaults.Button,
            },
            new ColumnProperty(nameof(DeliveryOperatorDtoModel.Id))
            {
            Title = T("Admin.Common.Edit").Text,
            Width = "100",
            ClassName =  NopColumnClassDefaults.Button,
            Render = new RenderButtonsInlineEdit()
            },
            new ColumnProperty(nameof(DeliveryOperatorDtoModel.Id))
            {
            Title = T("Admin.Common.Delete").Text,
            Width = "100",
            ClassName =  NopColumnClassDefaults.Button,
            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
            }
            }
            })
        </div>
    </div>
</div>
<div class="float-left">
    <a href="@Url.Action("DeliveryOperatorCreate", "DeliveryAdmin", new { languageId = Model.DeliveryOperatorDtoSearchModel.LanguageId })" class="btn btn-primary">
        <i class="fas fa-plus-square"></i>
        @T("Admin.Common.AddNew")
    </a>
</div>




