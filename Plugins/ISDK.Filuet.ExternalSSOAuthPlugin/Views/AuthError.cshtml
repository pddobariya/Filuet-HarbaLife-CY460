@using Nop.Web.Framework
@{
    Layout = "../../ISDK.Filuet.OnlineOrdering.CorePlugin/Views/Shared/_HomeColumns.cshtml";
    NopHtml.AppendPageCssClassParts("html-login-page");

    int mediaWidth = 660;
    int asidePadding = 60;
}
<link rel="stylesheet" href="~/Plugins/ISDK.Filuet.ExternalSSOAuthPlugin/Content/sso-auth-plugin.min.css" />

@section login_splash {
<div class="splash login-page" style="margin-top: -80px;height: 200px;width: -webkit-fill-available;text-align: -webkit-center;background: #78BE20;">
    @if (Model != null)
    {
        <div>@Model.Message</div>
    }
    <div id="paymentSebErrorMessage" style="height: inherit; display: table-cell; vertical-align: middle; color: white; font-size: 20px;"></div>
</div>
    <script type="text/javascript">
        function parse_query_string(query) {
            var vars = query.split("&");
            var query_string = {};
            for (var i = 0; i < vars.length; i++) {
                var pair = vars[i].split("=");
                var key = decodeURIComponent(pair[0]);
                var value = decodeURIComponent(pair[1]);
                if (typeof query_string[key] === "undefined") {
                    query_string[key] = decodeURIComponent(value);
                } else if (typeof query_string[key] === "string") {
                    var arr = [query_string[key], decodeURIComponent(value)];
                    query_string[key] = arr;
                } else {
                    query_string[key].push(decodeURIComponent(value));
                }
            }
            return query_string;
        }

        var params = location.search;
        if (params) {
            var parsedParams = parse_query_string(params.substr(1));
            var div = document.getElementById('paymentSebErrorMessage');
            div.innerText = parsedParams.error_msg;
        }
    </script>
}

